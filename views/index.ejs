<%- include("header.ejs") %>

    <body>
        <!--navbar-->

        <section id="date-section">
            <div class="container date-sec">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="center">
                            <%= date %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="todo">
            
            <div class="container text-con">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <h1 class="todo-h1">TODO LIST</h1>


                        <ul class="ul-todo" id="todo-list" style="list-style: none;">

                            <% for(let i=0 ;i<newListItems.length;i++){%>
                                <div style="display: flex;row-gap: 10px;" class="box">
                                    <input style="margin-right: 10px; margin-top: 6px;" type="checkbox" name="checkbox"
                                        id="checkbox">
                                        <li  id="li">
                                            <%= newListItems[i] %>
                                        </li>
                                    <script>
                                        const todoList = document.getElementById('todo-list');
                                        todoList.addEventListener('change', function (event) {
                                            if (event.target.type === 'checkbox') {
                                                const listItem = event.target.parentElement;
                                                listItem.classList.toggle('del');
                                            }
                                        });
                                    </script>
                                    
                                </div>
                                <% } %>

                                    <form class="inp-form" method="post" action="/">
                                        <input id="item-input" class="form-control input-group mb-3"
                                            aria-label="Username" placeholder="ADD ITEMS" type="text" name="newItem"
                                            id="" autocomplete="off">
                                        <button class="btn btn-light btn-add " type="submit">ADD</button>
                                    </form>

                        </ul>
                    </div>
                </div>
            </div>
        </section>





        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    </body>

    </html>